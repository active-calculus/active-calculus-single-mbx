<exercise component="proteus" label="proteus-matching-products-quotients"  xml:id="proteus-products-quotients">
<!--  <title>Matching Problem, Derivatives</title>
  <idx>matching derivatives</idx>
-->
  <statement>
    <p>
      Each of the functions on the left below could be described as having a specific algebraic structure as noted on the right.  Match each function with its corresponding structure. It is possible that not all structures are used; and it is possible that not all functions have a description for its algebraic structure.
    </p>
  </statement>

  <matches>
    <match>
      <premise order="1"><m>\small{f(x) = \sin(x) \cdot \cos(x) + e^x  \sqrt{x}}</m></premise>
      <response>The sum of two products</response>
    </match>
    <match>
      <!-- Renders fine in Firefox on Windows and Linux -->
      <!-- Too wide in Firefox on Mac -->
      <premise order="4"><m>\small{g(x) = (\sin(x) + \cos(x)) \cdot (e^x + \sqrt{x})}</m></premise>
      <response>The product of two sums</response>
    </match>
    <match>
      <premise order="2"><m>h(x) = \dfrac{\sin(x) \cdot \cos(x)}{e^x \sqrt{x}}</m></premise>
      <response>The quotient of two products</response>
    </match>
    <match>
      <premise order="5"><m>r(x) = \dfrac{\sin(x) + \cos(x)}{e^x - \sqrt{x}}</m></premise>
      <response>The quotient of a sum and a difference</response>
    </match>
    <match>
      <premise order="3"><m>s(x) = \dfrac{\sin(x)}{e^x} + \dfrac{\cos(x)}{\sqrt{x}}</m></premise>
      <response>The sum of two quotients</response>
    </match>
    <match>
      <response>The quotient of two sums</response>
    </match>
    <match>
      <response>The difference of a quotient and a product</response>
    </match>
    <match>
      <response>The sum of a quotient and a product</response>
    </match>
  </matches>
</exercise>


